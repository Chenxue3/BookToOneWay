
page {
	background-color: rgb(238, 238, 238);
}
.topBox {
	background-color: #FFFFFF;
	height: 30%;
	margin-bottom: 10rpx;
	padding-top: 40rpx;
	position: relative;
	background-color: rgb(178, 239, 193);
}
.topBox>.userImg {
	width: 100%;
	height: 140rpx;
	position: relative;
}
.topBox>.userImg>image {
	width: 140rpx;
	height: 140rpx;
	border-radius: 50%;
	position: absolute;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	background-color: #808080;
}
.nickName {
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	height: 50rpx;
	text-align: center;
	margin: 0rpx;
	margin-top: 20rpx;
	font-size: 30rpx;
	position: absolute;
	display: flex;
	color: #FFFFFF;
}
.isLogin {
	margin-top: 20rpx;
}
.vipTag {
	width: 40rpx;
	height: 20rpx;
	line-height: 20rpx;
	border: RGBA(228, 156, 87, 1) 1rpx solid;
	font-size: 19rpx;
	margin: 0rpx;
	margin-top: 10rpx;
	background-color: RGBA(249, 210, 97, 1);
	color: RGBA(128, 62, 0, 1);
	border-radius: 15rpx;
}
.userInfoIcon {
	width: 40rpx;
	height: 20rpx;
	font-size: 30rpx;
	margin-left: 20rpx;
}
.main {
	width: 90%;
	background-color: #fff;
	border-radius: 15rpx;
	margin: 0 auto;
	padding: 20rpx;
	position: fixed;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	top: 320rpx;
}
my-pageitems {
	width: 96%;
}

