
.content {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background-color: #F0F0F0;
}
.top {
	background-image: linear-gradient(#08b263, #a1e0b1,#F0F0F0);
	background-color: rgb(178, 239, 193);
	width: 100%;
	height: 25vh;
}
.topBar {
	height: 80px;
	text-align: center;
	line-height: 80px;
	width: 100%;
	font-family: 'Courier New', Courier, monospace;
	font-size: 20px;
}
.searchPart {
	width: 90%;
	height: 30px;
	width: 90%;
	position: relative;
	z-index: 100;
	top: -23vh;
	border-radius: 15px;
}
.seachBar {
	background-color: rgb(220, 220, 220);
	border-radius: 15px;
	text-align: center;
	line-height: 30px;
}
.swiperBar {
	width: 90%;
	position: relative;
	z-index: 100;
	top: -20vh;
	border-radius: 15px;
	margin-bottom: -20px;
}
.mainPart {
	position: relative;
	top: -10vh;
}
.swiper-item {
	height: 50vh;
	text-align: center;
	width: 100%;
}
.text-area {
	display: flex;
	justify-content: center;
}
.booksSell {
	width: 100vw;
	margin-bottom: 20px;
}
.title {
	font-size: 36rpx;
	color: #8f8f94;
}
.optionPart {
	display: flex;
	flex-direction: column;
	height: 200rpx;
	justify-content: space-around;
	justify-items: center;
	align-items: center;
}
.titleItem {
	background-color: #F8F8F8;
	width: 100%;
	height: 40px;
	font-size: 20px;
	line-height: 40px;
}
.options {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	margin-top: 20px;
}
.option {
	font-size: 12px;
	width: 100px;
	background-color: none;
	border: 0px;
	/* background-image: linear-gradient(#F2F2F2, #a0e7cf); */
}
.icons {
	width: 35rpx;
	height: 35rpx;
}

